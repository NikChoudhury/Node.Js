<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <title>Choudhury</title>
</head>

<body>
    {{!-- Navbar --}}
    <style>
        header.nav-header nav {
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, .9);
        }
    </style>
    {{>nav}}
    <section class="wapper">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8 col-12">
                    <div class="main-content">
                        <h1>Weather App Get The Latest Weather Info Of Your City</h1>
                        <style>
                            .iframe-div {
                                position: relative;
                                height: 45rem;
                                margin-top: 2rem;
                                margin-bottom: 2rem;
                            }

                            .iframe-div #loading {
                                position: absolute;
                                top: 0;
                                left: 0;
                                width: 100%;
                                height: 100%;
                                background: #fff url("/images/loading.gif");
                                background-repeat: no-repeat;
                                background-position: center center;
                                transition: 5s all;
                            }
                        </style>
                        <div class="iframe-div">
                            <iframe src="https://tech-nik.herokuapp.com/weather" width="100%" height="100%"
                                frameborder="0" style="border:1; " onload="preLoading()">
                            </iframe>
                            <div id="loading"></div>
                        </div>
                    </div>



                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-12">
                    <div class="side-content">
                        <div class="side-content-1">
                            <h1>Side is under Construction</h1>
                            <ul>
                                <li>HTML</li>
                                <li>CSS</li>
                                <li>Node.Js</li>
                                <li>SCSS</li>
                                <li>JS</li>
                                <li>PHP</li>
                                <li>MongooDB</li>
                                <li>MySQL</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    {{>footer}}

    {{!-- External Js Scripts --}}
    {{>scripts}}

    {{!-- Imp JS --}}
    {{>js}}

    {{!-- AOS --}}
    <script src="vendor/AOS/aos.js"></script>
    <script>
        AOS.init({
            offset: 160,
            duration: 700
        });
    </script>
    <script>
        var loading = document.getElementById("loading");
        function preLoading() {
            loading.style.display = "none";
        }
    </script>